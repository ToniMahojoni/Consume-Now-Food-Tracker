<UserControl x:Class="ConsumeNow.ÜbersichtPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsumeNow"
             mc:Ignorable="d" 
             d:DesignHeight="434" d:DesignWidth="650"
             Background="#6E8B3D">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="350*" />
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="648*"/>
        </Grid.ColumnDefinitions>

        <!-- white bar in column 0 and row 0 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="0">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- white bar in column 0 and row 1 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="1">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- white in column 0 and row 2 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="2">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- Übersicht text label at the top -->

        <Viewbox Stretch="UniformToFill" Grid.Row="0" Grid.Column="1">
            <Border BorderBrush="White" BorderThickness="0,0,2,2" Margin="0,0,365,0" Grid.Row="0" Height="43" >
                <Label Content="Übersicht"  FontFamily="Cascadia Mono Semibold" FontSize="34" Margin="0,0,0,-2" />
            </Border>
        </Viewbox>

        <ContentControl x:Name="CCÜbersichtTable" Grid.Column="1" Grid.Row="1">
        <!-- data table with the Übersicht entries -->

        <Viewbox Stretch="UniformToFill" Grid.Column="1" Grid.Row="1">
            <DataGrid Width="618" Height="338" Name="ÜbersichtTable"/>
        </Viewbox>

        </ContentControl>

        <ContentControl x:Name="CCCatAddButton" Grid.Column="1" Grid.Row="2">
        <!-- add button -->

        <Viewbox Stretch="UniformToFill" Grid.Column="1" Grid.Row="2">
            <Button Name="AddCatButton" Content="Kategorie hinzufügen" Width="640"  Height="29" 
                    FontFamily="Cascadia Mono SemiBold" FontSize="20" FontWeight="Bold" Click="AddCatButton_Click"/>
        </Viewbox>

        </ContentControl>

    </Grid>
</UserControl>

<UserControl x:Class="ConsumeNow.Subpages.LebensmittelAddPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsumeNow.Subpages"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1298"
             Background="#6E8B5C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="62*" />
            <RowDefinition Height="62*" />
            <RowDefinition Height="62*" />
            <RowDefinition Height="62*" />
            <RowDefinition Height="62*" />


        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>

        <!-- white bar in column 0 and row 0 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="0">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- white bar in column 0 and row 0 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="1">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- white bar in column 0 and row 0 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="2">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- white bar in column 0 and row 0 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="3">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- white bar in column 0 and row 0 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="4">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- white bar in column 0 and row 0 -->

        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="5">
            <Image Source="/Images/border.png"/>
        </Viewbox>

        <!-- Lebensmittel hinzufügen text label at the top -->

        <Viewbox Stretch="UniformToFill" Grid.Row="0" Grid.Column="1">
            <Border BorderBrush="White" BorderThickness="0,0,2,2" Grid.Row="0" Height="22" Width="72" >
                <Label Content="hinzufügen" FontFamily="Cascadia Mono Semibold" FontSize="10" Margin="0,0,-2,-2" />
            </Border>
        </Viewbox>

        <!-- Typ text label -->
        <Viewbox Stretch="UniformToFill" Grid.Column="1" Grid.Row="1">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content="Lebensmitteltyp" FontSize="6" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- Name text label -->

        <Viewbox Stretch="UniformToFill" Grid.Column="1" Grid.Row="2">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content="Lebensmittelname" FontSize="6" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- Haltbarkeitsdatum text label -->

        <Viewbox Stretch="UniformToFill" Grid.Column="1" Grid.Row="3">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content="Haltbarkeitsdatum" FontSize="5.7" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- Kaufdatum text label -->

        <Viewbox Stretch="UniformToFill" Grid.Column="1" Grid.Row="4">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content="Kaufdatum" FontSize="10" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- Menge text label -->

        <Viewbox Stretch="UniformToFill" Grid.Column="1" Grid.Row="5">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content=" Menge" FontSize="12" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- Preis text label -->

        <Viewbox Stretch="UniformToFill" Grid.Column="3" Grid.Row="1">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content="Kaufpreis" FontSize="10" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- Kann man öffen text label -->

        <Viewbox Stretch="UniformToFill" Grid.Column="3" Grid.Row="2">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content="kann man öffnen?" FontSize="6" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- geöffnet text label -->

        <Viewbox Name="VBopenedText" Stretch="UniformToFill" Grid.Column="3" Grid.Row="3" Visibility="Collapsed">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content="geöffnet?" FontSize="11" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- verbleibende text label -->

        <Viewbox Name="VBremainingText" Stretch="UniformToFill" Grid.Column="3" Grid.Row="4" Visibility="Collapsed">
            <Border BorderBrush="Black" BorderThickness="1" Height="26" Width="69">
                <Label Content="verbleibend" FontSize="9" FontFamily="Cascadia Mono Semibold" Height="25" Width="68" Background="#E0EEEE"/>
            </Border>
        </Viewbox>

        <!-- SpeichernButton -->

        <Viewbox Stretch="UniformToFill" Grid.Column="4" Grid.Row="5">
            <Button Height="28" Width="74" Content="SPEICHERN" FontSize="9" FontFamily="Cascadia Mono Semibold" Background="#6495ED" />
        </Viewbox>

        

        <!-- Typ ComboBox -->

        <Viewbox Stretch="UniformToFill" Grid.Column="2" Grid.Row="1">
            <ComboBox Width="55" Height="21"/>
        </Viewbox>

        <!-- Name TextBox -->

        <Viewbox Stretch="UniformToFill" Grid.Column="2" Grid.Row="2">
            <TextBox Height="28" Width="74"/>
        </Viewbox>

        <!-- Haltbarkeitsdatum TextBox -->

        <Viewbox Stretch="UniformToFill" Grid.Column="2" Grid.Row="3">
            <TextBox Height="28" Width="74"/>
        </Viewbox>

        <!-- Kaufdatum TextBox -->

        <Viewbox Stretch="UniformToFill" Grid.Column="2" Grid.Row="4">
            <TextBox Height="28" Width="74"/>
        </Viewbox>

        <!-- Menge TextBox -->

        <Viewbox Stretch="UniformToFill" Grid.Column="2" Grid.Row="5">
            <TextBox Height="26" Width="70"/>
        </Viewbox>

        <!-- Kaufpreis TextBox -->

        <Viewbox Stretch="UniformToFill" Grid.Column="4" Grid.Row="1">
            <TextBox Height="28" Width="74"/>
        </Viewbox>

        <!-- kann man öffnen CheckBox -->

        <Viewbox Stretch="UniformToFill" Grid.Column="4" Grid.Row="2">
            <CheckBox Name="openable" Height="27" Width="72" Content="ja/nein" FontFamily="Cascadia Mono Semibold" Click="OpenableChecked"/>
        </Viewbox>

        <!-- geöffnet CheckBox -->

        <Viewbox Name="VBopenedBox" Stretch="UniformToFill" Grid.Column="4" Grid.Row="3" Visibility="Collapsed">
            <CheckBox Name="opened" Height="27" Width="72" Content="ja/nein" FontFamily="Cascadia Mono Semibold" />
        </Viewbox>

        <!-- verbleibend TextBox -->

        <Viewbox Name="VBremainingBox" Stretch="UniformToFill" Grid.Column="4" Grid.Row="4" Visibility="Collapsed">
            <TextBox Height="28" Width="74"/>
        </Viewbox>
        

    </Grid>
</UserControl>
